        </activity>
        <activity
            android:name=".MainMenu"
            android:label="@string/title_activity_menu"
            android:theme="@android:style/Theme.NoTitleBar" >
        </activity>
        <activity
            android:name=".messages"
            android:label="@string/title_activity_messages"
            android:theme="@android:style/Theme.NoTitleBar">
