        <activity
            android:name=".email"
            android:label="@string/title_activity_email"
            android:theme="@android:style/Theme.NoTitleBar">
        </activity>
        <activity
            android:name=".Settings"
            android:label="@string/title_activity_settings"
            android:theme="@android:style/Theme.NoTitleBar">
